<?xml version="1.0" encoding="UTF-8"?>
<faces-config
    xmlns="http://xmlns.jcp.org/xml/ns/javaee"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-facesconfig_2_2.xsd"
    version="2.2">
	<application>
		<el-resolver>
    		    org.springframework.web.jsf.el.SpringBeanFacesELResolver
		</el-resolver>
	</application>
	<navigation-rule>
		<from-view-id>/*</from-view-id>
		<navigation-case>
			<from-outcome>managePost</from-outcome>
			<to-view-id>managePost.xhtml</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-outcome>details</from-outcome>
			<to-view-id>postDetails.xhtml</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-outcome>jobDetails</from-outcome>
			<to-view-id>jobDetails.xhtml</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-outcome>home</from-outcome>
			<to-view-id>home.xhtml</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-outcome>login</from-outcome>
			<to-view-id>login.xhtml</to-view-id>
		</navigation-case>
			<navigation-case>
			<from-outcome>userJobManagement</from-outcome>
			<to-view-id>secured/userJobManagement.xhtml</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-outcome>userJobDetail</from-outcome>
			<to-view-id>secured/userJobDetails.xhtml</to-view-id>
		</navigation-case>
				<navigation-case>
			<from-outcome>newPost</from-outcome>
			<to-view-id>secured/newPost.xhtml</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-outcome>newPostConfirm</from-outcome>
			<to-view-id>secured/newPostConfirm.xhtml</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-outcome>editPost</from-outcome>
			<to-view-id>secured/editPost.xhtml</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-outcome>editPostConfirm</from-outcome>
			<to-view-id>secured/editPostConfirm.xhtml</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-outcome>newUserRegister</from-outcome>
			<to-view-id>newUserRegister.xhtml</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-outcome>newUserRegisterConf</from-outcome>
			<to-view-id>newUserRegisterConfirm.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>		
</faces-config>